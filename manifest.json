{
    "manifest_version": 3,
    "name": "Saatva Helper Extension",
    "version": "1.0.2",
    "description": "Cart ID helper",
    "permissions": [
        "activeTab",
        "cookies"
    ],
    "host_permissions": [
        "*://*.tsc-starts-coding.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Cart ID Helper"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
